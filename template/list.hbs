{{#each posts}}
{{#with this}}
<div id="content">
   <div class="post-list">
        <a class="post-list-wrap-link" href="{{postUrl post (isStatic)}}">
        <div class="post-header">
            <h1 class="post-title">{{ postTitle }}</h1>
            <div class="post-info">(Date: {{ postDate }})</div>
        </div>
        <div class="post-body">
            {{{ postBody }}}
        </div>
        </a>
        <hr class="post-hr" />
    </div>
</div>
{{/with}}
{{/each}}