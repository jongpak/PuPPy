{{#each posts}}
{{#with this}}
<div id="content">
   <div class="post">
       <div class="post-header">
           <h1 class="post-title">{{ postTitle }}</h1>
           <div class="post-info">(Date: {{ postDate }})</div>
       </div>
       <div class="post-body">
           {{{ postBody }}}
        </div>
        <hr class="post-hr" />
    </div>
</div>
{{/with}}
{{/each}}